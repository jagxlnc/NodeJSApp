
<!--
including header content which is common for all pages
-->
<%- include ../layouts/header.ejs %>	
	
		
<% if (messages.error) { %>
	<p style="color:red"><%- messages.error %></p>
<% } %>

<% if (messages.success) { %>
	<p style="color:green"><%- messages.success %></p>
<% } %>

<form action="/users/edit/<%= id %>" method="post" name="form1">
	<table width="25%" border="0">
		<tr> 
			<td>First Name</td>
			<td><input type="text" name="fname" id="fname" value="<%= fname %>" /></td>
		</tr>
		<tr> 
			<td>Last Name</td>
			<td><input type="text" name="lname" id="lname" value="<%= lname %>" /></td>
		</tr>
		<tr> 
			<td>Age</td>
			<td><input type="text" name="age" value="<%= age %>" /></td>
		</tr>
		<tr> 
			<td>Mobile</td>
			<td><input type="text" name="mobile" value="<%= mobile %>" /></td>
		</tr>
		<tr> 
			<td>Email</td>
			<td><input type="text" name="email" value="<%= email %>" /></td>
		</tr>
		<tr> 
			<td></td>
			<td><input type="submit" name="Submit" value="Edit" /></td>
		</tr>
	</table>
	<input type="hidden" name="_method" value="PUT" />
</form>



